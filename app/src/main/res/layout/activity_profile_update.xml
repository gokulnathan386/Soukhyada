<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:weightSum="2"
        android:background="@color/bg_color_light_green"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="15dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:src="@drawable/baseline_arrow_back_ios_24"
                        android:layout_width="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="25dp">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Change Password"
                        android:singleLine="true"
                        android:layout_marginTop="-1dp"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:textColor="#333333"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.google.android.material.card.MaterialCardView
                    style="@style/MyCardView1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profileImgCardView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="100dp"
                            android:layout_gravity="center"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="2dp">

                            <ImageView
                                android:id="@+id/profileimage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/baseline_account_circle_24" />

                        </androidx.cardview.widget.CardView>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp"/>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:hint="Enter your Name"
                            android:textColorHint="@color/extreme_dark_green"
                            android:theme="@style/EditTextThemeOverlay"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                            app:hintTextAppearance="@style/Text2Label"
                            app:hintTextColor="@color/extreme_dark_green">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/gmailTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:enabled="true"
                                android:singleLine="true"
                                android:textSize="12sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:hint="Enter your E-mail"
                            android:textColorHint="@color/extreme_dark_green"
                            android:theme="@style/EditTextThemeOverlay"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                            app:hintTextAppearance="@style/Text2Label"
                            app:hintTextColor="@color/extreme_dark_green">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:enabled="true"
                                android:singleLine="true"
                                android:textSize="12sp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:hint="Enter your mobile no"
                            android:textColorHint="@color/extreme_dark_green"
                            android:theme="@style/EditTextThemeOverlay"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                            app:hintTextAppearance="@style/Text2Label"
                            app:hintTextColor="@color/extreme_dark_green">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:enabled="true"
                                android:singleLine="true"
                                android:textSize="12sp" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/signTxtBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Update"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_marginHorizontal="80dp"
                                android:textAllCaps="false"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:backgroundTint="@color/status_bar_light_green"
                                android:gravity="center"
                                android:background="@drawable/themerect"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginBottom="15dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>

